{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "es7"],
    "outDir": "public",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "keyofStringsOnly": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", "typings/main", "typings/main.d.ts"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
